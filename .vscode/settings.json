{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true,
    "editor.rulers": []
  },
  "yaml.schemas": {
    "https://raw.githubusercontent.com/lastmile-ai/mcp-agent/main/schema/mcp-agent.config.schema.json": [
      "mcp-agent.config.yaml",
      "mcp_agent.config.yaml",
      "mcp-agent.secrets.yaml",
      "mcp_agent.secrets.yaml"
    ]
  },
  "editor.fontFamily": "Cascadia Code, Fira Code, Menlo, Monaco, 'Courier New', monospace",
  "python.testing.pytestArgs": [
    "tests"
  ],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "python.analysis.typeCheckingMode": "standard",
  "chat.mcp.serverSampling": {
    "adi_mcp_server_trials/.vscode/mcp.json: adi-mcp-server": {
      "allowedModels": [
        "copilot/gpt-4.1",
        "copilot/claude-3.5-sonnet",
        "copilot/claude-3.7-sonnet",
        "copilot/claude-3.7-sonnet-thought",
        "copilot/claude-sonnet-4",
        "copilot/gemini-2.0-flash-001",
        "copilot/gemini-2.5-pro",
        "copilot/gpt-4o",
        "copilot/gpt-5",
        "copilot/gpt-5-mini",
        "copilot/o3-mini",
        "copilot/o4-mini"
      ]
    }
  },
  "cursorpyright.analysis.typeCheckingMode": "standard"
}
